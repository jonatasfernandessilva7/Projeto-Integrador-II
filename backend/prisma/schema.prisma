// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @id @default(autoincrement())
  email String  @unique
  nome  String?
  senha String
  patrimonio Patrimonio[]
}

model Patrimonio {
  id Int @id @default(autoincrement())
  bens Bens[]
  direitos Direitos[]
  obrigacoes Obrigacoes[]
  usuarioId Int @unique
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

model Bens {
  id Int @id @default(autoincrement())
  imoveis Imovel[]
  terrenos Terreno[]
  veiculos Veiculo[]
  participacoes ParticipacoesSocietarias[]
  outrosinvestimentos OutrosInvestimentos[]
}

model Direitos {
  id Int @id @default(autoincrement())
  valor Float
  anoDeEntrada DateTime
}

model Obrigacoes {
  id Int @id @default(autoincrement())
  valor Float
  anoDeEntrada DateTime
}

model Imovel {
  id        Int     @id @default(autoincrement())
  nome     String
  descricao   String?
  valor Decimal
  anoDeCompra    DateTime
  depreciacao  Decimal
}

model Terreno {
  id        Int     @id @default(autoincrement())
  nome     String
  descricao   String?
  valor Decimal
  anoDeCompra    DateTime
  depreciacao  Decimal
}

model Veiculo {
  id        Int     @id @default(autoincrement())
  nome     String
  descricao   String?
  valor Decimal
  anoDeCompra    DateTime
  depreciacao  Decimal
}

model ParticipacoesSocietarias {
  id        Int     @id @default(autoincrement())
  tipo     String
  descricao   String?
  valor Decimal
  anoDeCompra    DateTime
}

model OutrosInvestimentos {
  id        Int     @id @default(autoincrement())
  tipo     String
  descricao   String?
  valor Decimal
  anoDeCompra    DateTime
}